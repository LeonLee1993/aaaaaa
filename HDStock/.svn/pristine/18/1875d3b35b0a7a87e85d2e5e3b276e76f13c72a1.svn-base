#import "HDSearchCenterViewController.h"

@interface HDSearchCenterViewController ()

@end

@implementation HDSearchCenterViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    UISearchBar * search = [[UISearchBar alloc]initWithFrame:CGRM(0, 0, SCREEN_WIDTH, 40)];
    
    CGRect r= CGRectMake(0.0f, 0.0f, 1.0f, 40);
    UIGraphicsBeginImageContext(r.size);
    CGContextRef context = UIGraphicsGetCurrentContext();
    
    CGContextSetFillColorWithColor(context, [UIColor orangeColor].CGColor);
    CGContextFillRect(context, r);
    
    UIImage *img = UIGraphicsGetImageFromCurrentImageContext();
    UIGraphicsEndImageContext();
    
    [search setBackgroundImage:img];
    self.view.backgroundColor = COLOR(orangeColor);
    
    [self.view addSubview:search];
    
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}

