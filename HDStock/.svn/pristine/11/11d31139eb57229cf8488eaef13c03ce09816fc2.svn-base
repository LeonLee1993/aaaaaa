- (ZFPlayerModel *)playerModel
{
    if (!_playerModel) {
        _playerModel                  = [[ZFPlayerModel alloc] init];
        _playerModel.videoURL         = [NSURL URLWithString:@"http://dscj.oss-cn-shanghai.aliyuncs.com/record/dscj/dscj_73.m3u8"];
