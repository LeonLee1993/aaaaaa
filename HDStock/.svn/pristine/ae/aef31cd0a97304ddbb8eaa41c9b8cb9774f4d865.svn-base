#import "HDTopTapView.h"

@interface HDTopTapView()

@property (strong, nonatomic) UIImageView *topImage;
@property (strong, nonatomic) UILabel *bottomTitle;

@end

@implementation HDTopTapView{
    NSString *imageName;
    NSString *titleName;
    UIColor *myTitleColor;
}

- (instancetype)initWithTopImageName:(NSString *)TopImageName WithBottomTitle:(NSString *)BottomTitleString WithTitleColor:(UIColor *)titleColor{
    if (self = [super init]) {
        imageName = TopImageName;
        titleName = BottomTitleString;
        myTitleColor = titleColor;
        [self addSubview:self.topImage];
        [self addSubview:self.bottomTitle];
        [self initUI];
    }
    return self;
}

#pragma mark - LazyLoad
- (UIImageView *)topImage {
    if (!_topImage) {
        _topImage = [[UIImageView alloc] initWithImage:[UIImage imageNamed:imageName]];
    }
    return _topImage;
}

- (UILabel *)bottomTitle {
    if (!_bottomTitle) {
        _bottomTitle = [UILabel new];
        _bottomTitle.text = titleName;
        _bottomTitle.textAlignment = NSTextAlignmentCenter;
        _bottomTitle.textColor = myTitleColor;
        _bottomTitle.font = [UIFont systemFontOfSize:14];
    }
    return _bottomTitle;
}

#pragma mark - LayOut
- (void)initUI {
    self.topImage.frame = CGRectMake(5, 10, 24, 24);
    self.bottomTitle.frame = CGRectMake(30, 0, self.bounds.size.width / 5 - 30, 44);
}


/*
// Only override drawRect: if you perform custom drawing.
