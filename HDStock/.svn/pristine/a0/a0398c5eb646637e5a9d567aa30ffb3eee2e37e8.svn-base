@implementation HDLiveChateViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    self.view.backgroundColor = COLOR(whiteColor);
    [self createWkWeb];
    
//    [self fitFrame];
}


- (void) fitFrame {
    CGRect frame = self.view.frame;
    frame.size.height = SCREEN_HEIGHT-NAV_STATUS_HEIGHT-180;
    self.view.frame = frame;
}

- (void) createWkWeb {
    
    [self deleteWebCache];
    
    wkWeb = [[WKWebView alloc] initWithFrame:CGRM(0, 0, SCREEN_WIDTH, SCREEN_HEIGHT-NAV_STATUS_HEIGHT-173)];
    
    wkWeb.navigationDelegate = self;
    [wkWeb loadRequest:[NSURLRequest requestWithURL:[NSURL URLWithString:@"http://test.cdtzb.com/liveroom.php?type=chat"]]];
    wkWeb.scrollView.showsVerticalScrollIndicator = NO;
    wkWeb.backgroundColor = BACKGROUNDCOKOR;
    [self.view addSubview:wkWeb];
    
}

