#import "nothingContainView.h"

@implementation nothingContainView

+ (void)show
{   
    nothingContainView *cover = [[nothingContainView alloc] initWithFrame:CGRectMake(0, 64, SCREEN_WIDTH, SCREEN_HEIGHT-64)];
    cover.backgroundColor = [UIColor blackColor];
    cover.alpha = 1;
    [[UIApplication sharedApplication].keyWindow addSubview:cover];
    
}

+ (void)hide
{
    for (UIView *childView in [UIApplication sharedApplication].keyWindow.subviews) {
        if ([childView isKindOfClass:self]) {
            [childView removeFromSuperview];
        }
    }
}


@end
