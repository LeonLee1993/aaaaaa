#import "MarkerSecondTableViewCell.h"
#import "MarketStateButton.h"
@implementation MarkerSecondTableViewCell

- (void)awakeFromNib {
    [super awakeFromNib];
    // Initialization code
}

- (void)setSelected:(BOOL)selected animated:(BOOL)animated {
    [super setSelected:selected animated:animated];

    // Configure the view for the selected state
}
- (IBAction)firstButtonClicked:(UIButton *)sender {
    sender.backgroundColor = [UIColor whiteColor];
    sender.selected = YES;
    [self setButtonState:sender.tag];
}
- (IBAction)secondButtonClicked:(UIButton *)sender {
    sender.backgroundColor = [UIColor whiteColor];
    sender.selected = YES;
    [self setButtonState:sender.tag];
}
- (IBAction)thirdButtonClicked:(UIButton *)sender {
    sender.backgroundColor = [UIColor whiteColor];
    sender.selected = YES;
    [self setButtonState:sender.tag];
}
- (IBAction)forthButtonClicked:(UIButton *)sender {
    sender.backgroundColor = [UIColor whiteColor];
    sender.selected = YES;
    [self setButtonState:sender.tag];
}
- (IBAction)fifthButtonClicked:(UIButton *)sender {
    sender.backgroundColor = [UIColor whiteColor];
    sender.selected = YES;
    [self setButtonState:sender.tag];
}

- (void)setButtonState:(NSInteger)tagValue{
    for (id View in self.contentView.subviews) {
        UIView *view = View;
        if(view.tag == 200){
            for (id Button in view.subviews) {
                MarketStateButton *button = Button;
                if(button.tag!=tagValue){
                    button.selected = NO;
                    button.backgroundColor = RGBCOLOR(230, 230, 230);
                }
            }
        }
    }
}

@end
