@implementation HDVideoDetailsViewController

- (NSMutableArray *)commentArray{

    if (!_commentArray) {
        
        _commentArray = [NSMutableArray array];
    }

    return _commentArray;
}

- (NSMutableArray *)relatedArray{

    if (!_relatedArray) {
        
        _relatedArray = [NSMutableArray array];
    }
    
