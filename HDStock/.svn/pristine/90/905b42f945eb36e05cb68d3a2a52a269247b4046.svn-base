static NSString *const kGoTopNotificationName = @"goTop";//进入置顶命令
static NSString *const kLeaveTopNotificationName = @"leaveTop";//离开置顶命令

static NSInteger segmentSelection = 0;

@implementation HDHomePageViewController

- (void)viewDidLoad {
    [super viewDidLoad];
    
    [self setUpTableView];
    [[NSNotificationCenter defaultCenter] addObserver:self selector:@selector(acceptMsg:) name:kLeaveTopNotificationName object:nil];
    
}

- (void)dealloc
{
    [[NSNotificationCenter defaultCenter] removeObserver:self];
}

- (void)setUpTableView{

    _mainTableView.dataSource = self;
    
    _mainTableView.delegate = self;
    
}

#pragma mark === tableview data source

- (NSInteger)numberOfSectionsInTableView:(UITableView *)tableView{

    return 3;

}

- (NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section{

    switch (section) {
        case 0:
            return 1;
            break;
        case 1:
            return 1;
            break;
        case 2:
            return 1;
            break;
            
        default:
            break;
    }
    
    return 0;

}

- (CGFloat)tableView:(UITableView *)tableView heightForRowAtIndexPath:(NSIndexPath *)indexPath{

    switch (indexPath.section) {
        case 0:
            return 300;
            break;
        case 1:
            return 200;
            break;
        case 2:
            return SCREEN_HEIGHT - TABBAR_HEIGHT - NAV_HEIGHT;
            break;
            
        default:
            break;
    }
    
    return 0;

}


- (CGFloat)tableView:(UITableView *)tableView heightForFooterInSection:(NSInteger)section{

    switch (section) {
        case 0:
            return 10;
            break;
        case 1:
            return 10;
            break;
        default:
            break;
    }
    
    return 0;

}

- (UITableViewCell *)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath{
    
    if (indexPath.section == 2) {
        
        HDHomeBottomCell * cell = [[HDHomeBottomCell alloc]init];
        
        return cell;
        
    }

    UITableViewCell * cell = [_mainTableView dequeueReusableCellWithIdentifier:@"cell"];
    
    if (!cell) {
        
        cell = [[UITableViewCell alloc]initWithStyle:UITableViewCellStyleDefault reuseIdentifier:@"cell"];
    }
    
    cell.backgroundColor = UICOLOR(arc4random()%300, arc4random()%300, arc4random()%300, arc4random()%300);
    
    cell.textLabel.text = [NSString stringWithFormat:@"%@",indexPath];
    
    return cell;
}

- (CGFloat)tableView:(UITableView *)tableView heightForHeaderInSection:(NSInteger)section{
    
    if (section == 2) {
        
        return 50;
        
    }
    
    return 0;
    
}

- (UIView *) tableView:(UITableView *)tableView viewForHeaderInSection:(NSInteger)section {
    
    if (section == 2) {
        
        NSArray * btnDataSource = @[@"精选", @"快讯",@"日历"];
        
        YJSegmentedControl * segment = [YJSegmentedControl segmentedControlFrame:CGRM(0, 0,SCREEN_SIZE_WIDTH , 50) titleDataSource:btnDataSource backgroundColor:[UIColor whiteColor] titleColor:[UIColor blackColor] titleFont:systemFont(18) selectColor:MAIN_COLOR buttonDownColor:MAIN_COLOR Delegate:self selectSeg:segmentSelection];
        
        return segment;
        
    }
    
    return nil;
}


